<div class="container" style="margin-top:50px">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <div class="field">
      <p><%= f.label :닉네임 %><br />
      <%= f.text_field :username, autofocus: true %></p>
    </div>
    
    <div class="field">
      <p><%= f.label :이름 %><br />
      <%= f.text_field :realname %></p>
    </div>
    
    <div class="field">
      <%= f.label :이메일 %><br />
      <%= f.email_field :email %>
    </div>
  
    <div class="field">
      <%= f.label :비밀번호 %>
      <% if @minimum_password_length %>
      <em>최소 <%= @minimum_password_length %>자 입니다.</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  
    <div class="field">
      <%= f.label :비밀번호_확인 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  
    <div class="actions">
      <a class="waves-effect waves-light btn deep-orange lighten-2"><%= f.submit "가입하기", :onclick => "return validateform()" %></a>
    </div>
  <% end %>
  
  
</div>

<script>
  function validateform() {
    var x = $('input#user_email').val();
    if (x.indexOf("@sogang.ac.kr") == -1)
    {
      alert("서강대 이메일로 가입해주세요");
      return false;}
    else
    {
      return true;}
    
}
</script>